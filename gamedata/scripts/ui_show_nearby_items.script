function Porky_UIInfoItem:Reset()
	self.id = nil
	self.section = nil
	self.timer = get_time()
end

function Porky_UIInfoItem:IsShown()
	return self.dialog:IsShown()
end

function Porky_UIInfoItem:Show(state)
	if state == false then
		-- hide all extended info
		self.stats_dialog:Show(false)
		self.ammo:Show(false)
	end
	
	self.dialog:Show(state)
end